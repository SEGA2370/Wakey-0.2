<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityProfile"
    android:background="#212327">



    <ImageView
        android:id="@+id/profile_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="-207dp"
        android:background="@drawable/profback"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:drawableEnd="@drawable/baseline_settings_24"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/profile_first_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/edit_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/profile_first_bar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:text=" Edit"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:drawableStart="@drawable/pencil"/>

    <LinearLayout
        android:id="@+id/profile_first_bar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/profile_back"
        android:layout_marginTop="-35dp"
        android:background="@drawable/rounded_top_background">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/profpicback"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/manas" />

        </FrameLayout> <!--Prof Pic-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manas Menon"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kolkata"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:drawableStart="@drawable/baseline_location_on_24"/>

            </LinearLayout>



        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  1298"
                android:textColor="#FFFFFF"
                android:drawableStart="@drawable/dmdiamond"
                android:textStyle="bold"
                android:textSize="15sp"/>


            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  5:30 AM"
                android:textColor="#FFFFFF"
                android:drawableStart="@drawable/menonsunrise"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#353535">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overall Score"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="570 "
                    android:textSize="55sp"
                    android:textStyle="bold"
                    android:textColor="#A14DF5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:drawableEnd="@drawable/flame"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#353535">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overall Score"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="570 "
                    android:textSize="55sp"
                    android:textStyle="bold"
                    android:textColor="@drawable/gradient_alarm_stop"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:drawableEnd="@drawable/flame"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/profile_first_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/rounded_layout">


            <TextView
                android:id="@+id/menu_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:text="My Reward Points"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/menu_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/fi_rr_angle_small_right"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/rounded_layout">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:text="Add New Goal"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/menu_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/fi_rr_angle_small_right"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/rounded_layout">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:text="Share your feedback"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/menu_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/fi_rr_angle_small_right"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#212327"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/nav_home_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/homedef"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"/>

        <ImageButton
            android:id="@+id/nav_flame_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/flame"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"/>

        <ImageButton
            android:id="@+id/nav_alarm_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/alarm"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"/>

        <ImageButton
            android:id="@+id/nav_profile_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/navbarprofpink"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"/>



    </LinearLayout><!--Nav Bar-->

</androidx.constraintlayout.widget.ConstraintLayout>