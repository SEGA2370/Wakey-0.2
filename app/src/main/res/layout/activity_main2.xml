<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="#212327">

    <TextView
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:text="Welcome! Set Wakey   to achieve your morning goals"
        android:textColor="#FFFFFF"
        android:textSize="33sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" /> <!--Header-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:text="Let's make your morning more active and healthy."
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27" />

    <ImageView
        android:id="@+id/sunset"
        android:layout_width="380dp"
        android:layout_height="380dp"
        app:cardCornerRadius="100dp"
        android:src="@drawable/morning2_transformed_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >



    </ImageView><!--Sunset-->

    <androidx.cardview.widget.CardView
        android:id="@+id/first_bar"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:backgroundTint="#4C4C4C"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/sunset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/wakeup_habit"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:text="I want to wake up on time"
                android:drawableEnd="@drawable/fi_rr_angle_small_right"
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                />



    </androidx.cardview.widget.CardView> <!--First Bar-->

    <androidx.cardview.widget.CardView
        android:id="@+id/second_bar"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:backgroundTint="#4C4C4C"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/first_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/morning_habit"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:text="I want to build a morning habit"
                android:drawableEnd="@drawable/fi_rr_angle_small_right"
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                />

    </androidx.cardview.widget.CardView> <!--Second Bar-->

    <androidx.cardview.widget.CardView
        android:id="@+id/third_bar"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:backgroundTint="#4C4C4C"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/second_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



            <TextView
                android:id="@+id/day_habit"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:text="I want to start my day early"
                android:drawableEnd="@drawable/fi_rr_angle_small_right"
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                />





    </androidx.cardview.widget.CardView> <!--Third Bar-->

</androidx.constraintlayout.widget.ConstraintLayout>