<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212327"
    tools:context=".MainActivity7">

    <LinearLayout
        android:id="@+id/page_7_bar_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Activity"
            android:textColor="#AB4BF4"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/streaks"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Streaks"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp"/>

    </LinearLayout><!--Bar1 Head-->

    <LinearLayout
            android:id="@+id/page_7_bar_2"
            android:layout_width="380dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@+id/page_7_bar_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/frame1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yoga"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/frame2"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steps"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/frame3"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout> <!--Bar2-->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/page_7_bar_3"
        android:layout_width="350dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="#4E4D50"
        app:cardCornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page_7_bar_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="265dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textColor="#B949F3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:56 AM"
                    android:textColor="#B949F3"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alarm"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:30 AM"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@drawable/framegraph"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="40dp"/>


    </com.google.android.material.card.MaterialCardView> <!--Bar3 Graph-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_page7"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/page_7_bar_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#212327"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/nav_home_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/homedef"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"/>

        <ImageButton
            android:id="@+id/nav_flame_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/flamepink"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"/>

        <ImageButton
            android:id="@+id/nav_alarm_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/alarm"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"/>

        <ImageButton
            android:id="@+id/nav_profile_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"/>



    </LinearLayout><!--Nav Bar-->





</androidx.constraintlayout.widget.ConstraintLayout>