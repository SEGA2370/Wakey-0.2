<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212327"
    tools:context=".SignupFirstPage">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mounts1_1"
        android:layout_width="360dp"
        android:layout_height="320dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mounts"/>

    </com.google.android.material.card.MaterialCardView>

    
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="Let's get connected to wakey for healthy lifestyle"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/mounts1_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/info_text"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="Explore the most elegant way of achieving your morning routine letâ€™s build a healthy life."
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal|top"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/info_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:background="#393C41">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C847F4"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/first_page_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signin"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_gravity="center"
                />

        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/first_page_signup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Signup"
                android:textColor="#FFFFFF"
                android:textSize="22sp"/>

        </RelativeLayout>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>