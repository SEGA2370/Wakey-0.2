<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <dimen name="item_spacing">8dp</dimen>
    <string name="app_name">Wakey</string>
    <style name="CustomTimePicker.Widget" parent="android:Widget.Material.TimePicker">
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="CustomTimePickerStyle" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:timePickerMode">spinner</item> 
        <item name="android:timePickerStyle">@style/CustomTimePicker.Widget</item>
    </style>
    <style name="Theme.Wakey" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
    </style>
</resources>